@model List<app.Models.Cliente>;

@{
    ViewData["Title"] = "Lista Clientes";
}

<div class="row">
    <div class="col-sm-10 oofset-sm-2">
        <h2>Listado de Clientes</h2>
        <a asp-controller="Cliente" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo</a>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Numero de Identificación</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Correo eléctronico</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ClienteId</td>
                        <td>@item.Nombre</td>
                        <td>@item.NumeroIdentificacion</td>
                        <td>@item.Direccion</td>
                        <td>@item.Telefono</td>
                        <td>@item.CorreoElectronico</td>
                        <td>
                            <a asp-controller="Cliente" asp-action="Editar" asp-route-id="@item.ClienteId" class="btn btn-primary">Editar</a>
                            <a asp-controller="Cliente" asp-action="Eliminar" asp-route-id="@item.ClienteId" onclick="return confirmar()" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section Scripts {
    <script>
        function confirmar(){
            return confirm("¿Estás seguro de eliminar este empleado?")
        }
    </script>
}